<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_profile1" />
    <!--Change Password-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/txtAccName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Họ và tên"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edtFullName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/edittext_profile"
                android:ellipsize="end"
                android:ems="8"
                android:inputType="text"
                android:paddingLeft="1dp"
                android:text=""
                android:textColor="#006064">

                <requestFocus />
            </EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtPass"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nhập mật khẩu cũ "
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edtOldPassword"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/edittext_profile"
                android:inputType="textPassword"
                android:paddingLeft="1dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtNewPass"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mật khẩu mới "
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edtNewPassword"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/edittext_profile"
                android:inputType="textPassword"
                android:paddingLeft="1dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtConfirmpass"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Xác nhận mật khẩu "
                android:textSize="16dp" />

            <EditText
                android:id="@+id/edtConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/edittext_profile"
                android:inputType="textPassword"
                android:paddingLeft="1dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/txtGetNotification"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Hạn mức thông báo "
                android:textSize="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edtGetNotification"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:background="@drawable/edittext_profile"
                    android:inputType="number"
                    android:paddingLeft="1dp"
                    android:text=""
                    android:textColor="#01579B" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="đ"
                    android:textColor="#01579B"
                    android:textSize="17dp" />
            </LinearLayout>

        </LinearLayout>


        <Button
            android:id="@+id/btnUpdateProfile"
            android:layout_width="90dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/btn_purchase"
            android:onClick="clickToUpdateProfile"
            android:text="Lưu" />
    </LinearLayout>
</LinearLayout>