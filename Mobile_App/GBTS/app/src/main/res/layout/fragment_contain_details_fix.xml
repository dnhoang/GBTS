<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@drawable/background_table"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Thông tin tài khoản"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView0"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:text="Tên thẻ" />

        <EditText
            android:id="@+id/edtCardNameDetails"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:text="Thẻ đi học"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/imgEditCardViewDetails"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:src="@drawable/ic_action_card" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Mã thẻ" />

        <TextView
            android:id="@+id/txtCardIDDetails"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:text="01212184802" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Ngày Đăng Ký " />

        <TextView
            android:id="@+id/txtRegistrationDateDetails"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="20/12/2016" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Trạng thái" />


        <TextView
            android:id="@+id/txtStatusDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shap_circle_online"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:text="Số dư" />

        <TextView
            android:id="@+id/txtBalanceDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50,000 đ"
            android:layout_marginLeft="20dp"
            android:textColor="#F44336" />
    </LinearLayout>


    <Button
        android:id="@+id/btnPurchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nạp Tiền" />

</LinearLayout>