<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/btn_background_login"
    android:layout_gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="#000"
        android:text="Lấy làm tiếc."/>

    <ImageView
        android:id="@+id/image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="2dp"
        android:src="@drawable/ic_disconnect_wifi"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:textColor="#000"
        android:text="Kết nối mạng của bạn có vấn đề. \nHãy thử lại khi bạn có kết nối"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="10"
        android:background="#8BC34A"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/dialogBtnOK"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:textColor="#fff"
            android:background="@drawable/btn_connect"
            android:text=" Thử lại " />

        <View android:layout_height="match_parent"
            android:layout_width="2px"
            android:background="#fff"/>

        <Button
            android:id="@+id/dialogBtnCancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="5"
            android:textColor="#fff"
            android:background="@drawable/btn_connect"
            android:text=" Cài đặt" />
    </LinearLayout>

</LinearLayout>