<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="1dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="10dp"
            android:text="Tìm đường"
            android:textColor="#fff"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:text="Điểm khởi hành:"
            android:textSize="15dp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:gravity="center"
           android:orientation="horizontal">
           <AutoCompleteTextView
               android:id="@+id/AutoOrigin"
               android:layout_width="260dp"
               android:layout_height="30dp"
               android:background="@drawable/edittext_profile"
               android:hint="Nhập điểm đi"
               android:layout_gravity="center"
               android:singleLine="true"
               android:padding="5dp" />

           <TextView
               android:id="@+id/txtClear1"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_margin="3dp"
               android:layout_gravity="center"
               android:gravity="center"
               android:textColor="#fff"
               android:padding="5dp"
               android:background="@drawable/bg_clear_auto_text"
               android:text="X" />
       </LinearLayout>

        <TextView
            android:id="@+id/txtView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginBottom="5dp"
            android:text="Điểm đến: "
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <AutoCompleteTextView
                android:id="@+id/AutoDestination"
                android:layout_width="260dp"
                android:layout_height="30dp"
                android:background="@drawable/edittext_profile"
                android:hint="Nhập điểm đến"
                android:layout_gravity="center"
                android:singleLine="true"
                android:padding="5dp" />

            <TextView
                android:id="@+id/txtClear2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="3dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="5dp"
                android:textColor="#fff"
                android:background="@drawable/bg_clear_auto_text"
                android:text="X" />
        </LinearLayout>


        <Button
            android:id="@+id/btnFind"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_purchase"
            android:text="Tìm kiếm" />

    </LinearLayout>
</LinearLayout>