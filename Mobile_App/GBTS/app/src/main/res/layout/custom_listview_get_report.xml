<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/background_table"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtrpCardName"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="Tên thẻ"
            android:textColor="#FF9800" />

        <TextView
            android:id="@+id/txtrpTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:text="5000d"
            android:textColor="#F44336" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtrpBoughtDated"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="25/09/2016 04:03:48 PM" />

        <TextView
            android:id="@+id/txtrpBusCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shap_circle_number_report"
            android:gravity="center"
            android:text="01"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>