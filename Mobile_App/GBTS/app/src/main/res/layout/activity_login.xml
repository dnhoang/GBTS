<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gbts.navigationdraweractivity.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_login_activity"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:id="@+id/nav_icon"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_icon_white_bus"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:background="@drawable/bg_login_activity"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="top|center">

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center">


                <EditText
                    android:id="@+id/edtPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittextflat"
                    android:ellipsize="start"
                    android:fontFamily="sans-serif"
                    android:hint="Số điện thoại"
                    android:inputType="phone"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp">

                    <requestFocus />
                </EditText>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center">


                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="250dp"
                    android:layout_height="35dp"
                    android:background="@drawable/edittextflat"
                    android:fontFamily="sans-serif"
                    android:hint="Mật khẩu"
                    android:inputType="textPassword"
                    android:padding="3dp"
                    android:textAlignment="center"
                    android:textColor="#fff"
                    android:textColorHint="#fff"
                    android:textSize="16sp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">


                <CheckBox
                    android:id="@+id/saveLoginCheckBox"
                    style="@android:style/Widget.DeviceDefault.Light.CompoundButton.CheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:buttonTint="#fff"
                    android:padding="10dp"
                    android:text="Lưu tài khoản"
                    android:textColor="#fff" />

            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">


                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/buttonshape"
                    android:onClick="clickToLogin"
                    android:text="Đăng nhập"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#fff"
                    android:textSize="16sp" />


            </TableRow>

            <TableRow
                android:id="@+id/tableRow4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center">

                <Button
                    android:id="@+id/btnActive"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:background="@drawable/buttonshape"
                    android:onClick="clickToActivateCard"
                    android:text="Kích hoạt"
                    android:textAllCaps="true"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textColor="#fff"
                    android:textSize="16sp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>
