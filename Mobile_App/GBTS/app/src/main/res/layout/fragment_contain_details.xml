<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_table"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="Thông tin tài khoản"
        android:textSize="25dp" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:collapseColumns="5"
        android:layout_marginTop="15dp"
        android:background="@drawable/background_table"
        android:padding="20dp">
        <TableRow
            android:id="@+id/tableRow0"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/textView0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên thẻ" />

                <EditText
                    android:id="@+id/edtCardName"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="15dp"
                    android:padding="1dp"
                    android:textColor="#FF9800"
                    android:text="Thẻ đi học" />
            <ImageView
                android:id="@+id/imgEditCardView"
                android:layout_height="25dp"
                android:layout_width="25dp"
                android:padding="3dp"
                android:layout_marginLeft="2dp"
                android:src="@drawable/ic_action_user"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã thẻ" />

            <TextView
                android:id="@+id/txtCardID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="01212184802" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày Đăng Ký " />

            <TextView
                android:id="@+id/txtRegistrationDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="20/12/2016" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng thái" />


            <TextView
            android:id="@+id/txtStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Đang hoạt động" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số dư" />

            <TextView
                android:id="@+id/txtBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#F44336"
                android:layout_marginLeft="20dp"
                android:text="50,000 đ" />
        </TableRow>

        <!--<Spinner-->
            <!--android:id="@+id/sniperCreditLane"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Gói nạp tiền"-->
            <!--android:layout_marginTop="30dp"/>-->

        <Button
            android:id="@+id/btnPurchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nạp Tiền"
            android:layout_marginTop="30dp"/>
    </TableLayout>


</LinearLayout>