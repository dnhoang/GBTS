<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_topup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bggeneral"
    tools:context="com.example.topupemulator.TopupActivity">

    <RelativeLayout
        android:id="@+id/layoutInstruction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/style_heading"
        android:padding="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/tvCardStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"

            android:text="Chọn một trong những gói sau đây"
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="22sp" />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_menu_manage"
        android:id="@+id/fab"
        app:backgroundTint="#008396"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/listToptup"
        android:layout_alignEnd="@+id/listToptup"
        android:layout_marginBottom="20dp" />

    <ListView
        android:id="@+id/listToptup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutInstruction"
       />
</RelativeLayout>
