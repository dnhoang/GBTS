<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.emulator.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:src="@drawable/nfc_logo"
        android:id="@+id/imageView"
        android:layout_below="@+id/tvHeaderRouteName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:text=" Vui lòng chạm thẻ vào đây"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPrice"
        android:id="@+id/tvHeaderRouteName"
        android:paddingTop="64dp"
        android:textSize="36sp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="152dp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp"
        android:id="@+id/tvRouteNumber"
        android:textSize="24sp" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRouteNumber"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvRouteName"
        android:textSize="24sp"
        android:textAlignment="center" />
    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvRouteName"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvPrice"
        android:textSize="18sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/container"
        android:background="#14D63E"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        >
        <TextView
            android:text="Mua vé thành công"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="197dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:textStyle="normal|bold" />
        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvSuccessPrice"
            android:layout_below="@id/textView4"
            android:layout_centerHorizontal="true"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_light" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="#ff0000"
        android:id="@+id/containerfail">

        <TextView
            android:text="Mua vé thất bại"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="197dp"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/background_light"
            android:textSize="36sp"
            android:textStyle="normal|bold" />
    </RelativeLayout>

</RelativeLayout>
