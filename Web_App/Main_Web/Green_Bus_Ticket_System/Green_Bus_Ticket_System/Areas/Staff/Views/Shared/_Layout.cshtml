@{ 
    Green_Bus_Ticket_System_Data.User user = (Green_Bus_Ticket_System_Data.User) Session["user"];
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Green Bus Ticket System - Fast - Cheap - Convenient">
    <meta name="keywords" content="bus, green, ticket, convenient" />
    <title>@ViewBag.Title | Green Bus Ticket System</title>
    <!-- ========== Css Files ========== -->
    <link href="~/Content/front/css/root.css" rel="stylesheet">
    <!--Other Css Here-->
    @if (IsSectionDefined("CustomCss"))
    {
        @RenderSection("CustomCss", required: false);
    }
</head>
<body>
    <!-- Start Page Loading -->
    <div class="loading"><img src="~/Content/front/img/loading.gif" alt="loading-img"></div>
    <!-- End Page Loading -->
    <!-- //////////////////////////////////////////////////////////////////////////// -->
    <!-- START TOP -->
    <div id="top" class="clearfix">
        <!-- Start App Logo -->
        <div class="applogo">
            <a href="#" class="logo">GBTS</a>
        </div>
        <!-- End App Logo -->
        <!-- Start Sidebar Show Hide Button -->
        <a href="#" class="sidebar-open-button"><i class="fa fa-bars"></i></a>
        <a href="#" class="sidebar-open-button-mobile"><i class="fa fa-bars"></i></a>
        <!-- End Sidebar Show Hide Button -->
        <!-- Start Top Menu -->
        <!-- End Top Menu -->
        <!-- Start Top Right -->
        <ul class="top-right">
            <li class="dropdown link">
                <a href="#" data-toggle="dropdown" class="dropdown-toggle profilebox"><i class="fa falist fa-user"></i><b> @user.PhoneNumber</b><span class="caret"></span></a>
                <ul class="dropdown-menu dropdown-menu-list dropdown-menu-right">
                    <li><a href="/Passenger/Home/Profiles"><i class="fa falist fa-wrench"></i>Tài khoản</a></li>
                    <li><a href="/Access/Logout"><i class="fa falist fa-sign-out"></i>Đăng xuất</a></li>
                </ul>
            </li>
        </ul>
        <!-- End Top Right -->
    </div>
    <!-- END TOP -->
    <!-- //////////////////////////////////////////////////////////////////////////// -->
    <!-- //////////////////////////////////////////////////////////////////////////// -->
    <!-- START SIDEBAR -->
    <div class="sidebar sidebar-colorful clearfix">
        <ul class="sidebar-panel nav">
            <li class="sidetitle">KHÁCH HÀNG</li>
            <li><a href="/Staff/Home"><span class="icon color5"><i class="fa fa-home"></i></span>BẢNG ĐIỀU KHIỂN</a></li>
            <li><a href="/Staff/Card"><span class="icon color1"><i class="fa fa-credit-card"></i></span>QUẢN LÝ THẺ</a></li>
            <li><a href="/Staff/Passenger"><span class="icon color3"><i class="fa fa-users"></i></span>QUẢN LÝ HÀNH KHÁCH</a></li>
            <li><a id="btn-pub" href="#"><span class="icon color6"><i class="fa fa-paper-plane"></i></span>PHÁT HÀNH THẺ CÀO</a></li>
            
        </ul>
        <ul class="sidebar-panel nav">
            <li class="sidetitle">TÀI KHOẢN</li>
            <li><a href="/Staff/Home/Profiles"><span class="icon color4"><i class="fa fa-gear"></i></span>CÀI ĐẶT</a></li>
            <li><a href="/Access/Logout"><span class="icon color6"><i class="fa fa-sign-out"></i></span>ĐĂNG XUẤT</a></li>
        </ul>

    </div>
    <!-- END SIDEBAR -->
    <!-- //////////////////////////////////////////////////////////////////////////// -->
    <!-- //////////////////////////////////////////////////////////////////////////// -->
    <!-- START CONTENT -->
    <div class="content">
        <!-- Start Page Header -->
        <div class="page-header">
            <h1 class="title pull-left">@ViewBag.Title</h1>
            @if (IsSectionDefined("CustomHeader"))
            {
                @RenderSection("CustomHeader", required: false);
            }
        </div>
        <!-- End Page Header -->
        <!-- //////////////////////////////////////////////////////////////////////////// -->
        <!-- START CONTAINER -->
        <div class="container-default">

            @RenderBody()

            <!-- Modal -->
            <div class="modal fade" id="ntCardModal" tabindex="-1" role="dialog" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title">Tạo thẻ cào</h4>
                        </div>

                        <div class="modal-body">
                            <div class="form-inline">
                                <div class="form-group">
                                    <label for="nt-quantity" class="form-label">Số lượng</label>
                                    <input style="height:auto" type="number" class="form-control" id="nt-quantity" value="100">
                                </div>
                            </div>
                            <br />
                            <div class="form-group form-inline">
                                <label for="nt-price" class="form-label">Mệnh giá</label>
                                <div class="checkbox checkbox-success checkbox-circle">
                                    <input style="height:auto" id="checkbox20" type="checkbox" checked>
                                    <label for="checkbox20">
                                        20.000đ
                                    </label>
                                </div>
                                <div class="checkbox checkbox-success checkbox-circle">
                                    <input style="height:auto" id="checkbox50" type="checkbox" checked>
                                    <label for="checkbox50">
                                        50.000đ
                                    </label>
                                </div>
                                <div class="checkbox checkbox-success checkbox-circle">
                                    <input style="height:auto" id="checkbox100" type="checkbox" checked>
                                    <label for="checkbox100">
                                        100.000đ
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-white" data-dismiss="modal">HỦY</button>
                            <button type="button" class="btn btn-default" id="nt-save"><i class="fa fa-paper-plane"></i> PHÁT HÀNH</button>
                        </div>

                    </div>
                </div>
            </div>

            <!-- End Moda Code -->
        </div>
        <!-- END CONTAINER -->
        <!-- //////////////////////////////////////////////////////////////////////////// -->
        <!-- Start Footer -->
        <div class="row footer">
            <div class="col-md-6 text-left">
                Copyright © 2016 <a href="#" target="_blank">GBTS</a> All rights reserved.
            </div>
            <div class="col-md-6 text-right">
                FPT Capstone Project
            </div>
        </div>
        <!-- End Footer -->

    </div>
    <!-- End Content -->
    <!-- //////////////////////////////////////////////////////////////////////////// -->
    <!-- ================================================
    jQuery Library
    ================================================ -->
    <script type="text/javascript" src="~/Content/front/js/jquery.min.js"></script>
    <!-- ================================================
    Bootstrap Core JavaScript File
    ================================================ -->
    <script src="~/Content/front/js/bootstrap/bootstrap.min.js"></script>
    <!-- ================================================
    Plugin.js - Some Specific JS codes for Plugin Settings
    ================================================ -->
    <script type="text/javascript" src="~/Content/front/js/plugins.js"></script>
    <script>
        $("#btn-pub").click(function () {
            $("#ntCardModal").modal("show");
        });
        $("#nt-save").click(function () {
            var quantity = $("#nt-quantity").val();
            var t20 = $("#checkbox20");
            var t50 = $("#checkbox50");
            var t100 = $("#checkbox100");

            var type = "";

            if (t20.is(':checked')) type += "20000|";
            if (t50.is(':checked')) type += "50000|";
            if (t100.is(':checked')) type += "100000|";

            

            if (quantity.length == 0) {
                quantity = 1;
            }
            if (type.length == 0) {
                type = "20000";
            } else {
                type = type.substr(0, type.length - 1)
            }

            

            window.location = "/Staff/ScratchCard/Publish?num=" + quantity + "&type=" + type;
        });
    </script>
    <!--Other Js Here-->
    @if (IsSectionDefined("CustomJs"))
    {
        @RenderSection("CustomJs", required: false);
    }

</body>
</html>