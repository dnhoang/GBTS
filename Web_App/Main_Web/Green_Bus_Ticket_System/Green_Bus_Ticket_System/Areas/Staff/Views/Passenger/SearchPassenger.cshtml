
@{
    List<Green_Bus_Ticket_System_Data.User> users = (List<Green_Bus_Ticket_System_Data.User>)ViewBag.Users;
}

@if (users.Count == 0)
{
    <p>Không tìm thấy kết quả nào...</p>
}

@foreach (var item in users)
{
    <div class="col-md-6">
        <div class="panel panel-default dash-card margin-5">
            <div class="panel-title">
                <i class="fa fa-user titleicon"></i>@item.PhoneNumber
                <ul class="panel-tools">
                    @if (item.Status == (int)Green_Bus_Ticket_System_Utils.StatusReference.UserStatus.ACTIVATED)
                    {
                        <li><span class="green">ĐANG HOẠT ĐỘNG</span></li>
                    }
                    else if (item.Status == (int)Green_Bus_Ticket_System_Utils.StatusReference.UserStatus.DEACTIVATED)
                    {
                        <li><span class="red">ĐANG BỊ KHÓA</span></li>
                    }
                    

                </ul>
            </div>
            <div class="panel-body">
                <p class="pull-left">
                    Họ tên: @((item.Fullname != null) ? item.Fullname : "")
                    <br />
                    Số thẻ sở hữu: @item.Cards.Count() thẻ
                </p>
                <p class="pull-right padding-t-10">
                    <button type="button" class="btn btn-primary edit" id="@item.PhoneNumber"><i class="fa fa-pencil-square-o"></i></button>
                </p>

            </div>

        </div>
    </div>
}


